@model ShoppingCart


<form method="post">
	<input hidden asp-for="ProductId" />
	<br />
	<div class="container pt-4">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6 pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 text-end">
						<a class="btn btn-outline-info btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="@Model.Product.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>@Model.Product.Name</strong></h5>
						<p><small>@Model.Product.Description</small></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
							<h6><strong>$@Model.Product.Price.ToString("0.00")<span class="text-muted">x</span><input asp-for="Count" style="width:40%" /></strong></h6>
						</div>
						<div class="col-6 col-sm-4 col-lg-6 pt-2">
							<div class="w-75 btn-group" role="group">
								<a class="btn btn-primary">
									<i class="bi bi-plus-square"></i>
								</a> &nbsp;
								<a class="btn btn-warning">
									<i class="bi bi-dash-square"></i>
								</a>
							</div>

						</div>
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />

				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (USD)</span>
								<strong class="text-info">$$$</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<button type="submit" value="Add to Cart" class="btn btn-success form-control" >Add to Cart</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>